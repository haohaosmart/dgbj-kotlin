<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:orientation="vertical">

    <com.baishijiaju.dgbjForKotlin.widget.CommonPageTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImgSrc="@mipmap/icon_back"
        app:titleText="个人资料" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlPersonalImg"
            android:layout_width="match_parent"
            android:background="@drawable/bg_ripper_border"
            android:layout_height="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="头像"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <com.baishijiaju.dgbj.widget.CircleImageView
                android:id="@+id/ivPersonaImg"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="43dp"
                android:src="@mipmap/icon_default"
                android:scaleType="centerCrop" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="#EDEDED" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_ripper_border"
            android:layout_height="62dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="姓名"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#333333"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="#EDEDED" />
        <RelativeLayout
            android:id="@+id/rlPhone"
            android:layout_width="match_parent"
            android:background="@drawable/bg_ripper_border"
            android:layout_height="62dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="手机号"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#333333"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_marginRight="38dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>