<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include layout="@layout/layout_collect_main_content" />


    <LinearLayout
        android:id="@+id/leftDrawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <com.baishijiaju.dgbjForKotlin.widget.CircleImageView
                android:id="@+id/ivPhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:border_color="#DEDEDE"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="马小亮"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:layout_width="52dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_nav_label"
                android:gravity="center"
                android:text="采集员"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llMessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_ripper_border"
            android:layout_marginTop="46dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_news" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="59dp"
                android:text="消息"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llWorkHistory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_ripper_border"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_work" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="59dp"
                android:text="工作回顾"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llSupport"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_ripper_border"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_book" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="59dp"
                android:text="技术支持"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llFeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_ripper_border"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_opinion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="59dp"
                android:text="意见反馈"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llSetting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_ripper_border"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="59dp"
                android:text="设置"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
